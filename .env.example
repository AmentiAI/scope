# ──────────────────────────────────────────
# CryptoScope — Environment Variables
# Copy to .env.local for local dev
# ──────────────────────────────────────────

# App
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ── Neon Database ──────────────────────────
# Get from console.neon.tech → Connection string
DATABASE_URL=postgresql://user:pass@ep-xxx.us-east-2.aws.neon.tech/cryptoscope?sslmode=require
DATABASE_URL_UNPOOLED=postgresql://user:pass@ep-xxx.us-east-2.aws.neon.tech/cryptoscope?sslmode=require

# ── Clerk Auth ─────────────────────────────
# Create app at clerk.com, enable Twitter OAuth
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_xxx
CLERK_SECRET_KEY=sk_test_xxx
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/dashboard

# ── Twitter / X API v2 ─────────────────────
# Create app at developer.twitter.com
TWITTER_API_KEY=xxx
TWITTER_API_SECRET=xxx
TWITTER_BEARER_TOKEN=xxx
TWITTER_CLIENT_ID=xxx
TWITTER_CLIENT_SECRET=xxx

# ── Stripe ─────────────────────────────────
# Dashboard → Developers → API keys
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx
# Products → Prices → Copy price ID for each plan
STRIPE_PRO_MONTHLY_PRICE_ID=price_xxx
STRIPE_PRO_ANNUAL_PRICE_ID=price_xxx
STRIPE_AGENCY_MONTHLY_PRICE_ID=price_xxx
STRIPE_AGENCY_ANNUAL_PRICE_ID=price_xxx

# ── NOWPayments (Bitcoin + Solana) ─────────
# Sign up at nowpayments.io → Settings → API Keys
NOWPAYMENTS_API_KEY=xxx
# Settings → Store Settings → IPN Secret Key
NOWPAYMENTS_IPN_SECRET=xxx

# ── Inngest (Background Jobs) ──────────────
# inngest.com → App → Keys
INNGEST_EVENT_KEY=xxx
INNGEST_SIGNING_KEY=xxx

# ── Upstash Redis (Rate Limiting / Cache) ──
# console.upstash.com → Redis → REST API
UPSTASH_REDIS_REST_URL=https://xxx.upstash.io
UPSTASH_REDIS_REST_TOKEN=xxx

# ── Resend (Emails) ────────────────────────
# resend.com → API Keys
RESEND_API_KEY=re_xxx
RESEND_FROM_EMAIL=noreply@yourdomain.com
